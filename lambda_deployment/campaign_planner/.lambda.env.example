# Campaign Planner Agent - Environment Variables
# Required variables for AWS Lambda deployment

# ============================================================================
# REQUIRED - AWS Configuration
# ============================================================================
AWS_REGION=us-west-2

# ============================================================================
# REQUIRED - DynamoDB (Provider State Storage)
# ============================================================================
RECRUITMENT_DYNAMODB_TABLE_NAME=RecruitmentSessions-poc
RECRUITMENT_DYNAMODB_GSI1_NAME=GSI1

# ============================================================================
# REQUIRED - EventBridge (Event Communication)
# ============================================================================
RECRUITMENT_EVENTBRIDGE_BUS_NAME=recruitment-events-poc
RECRUITMENT_EVENTBRIDGE_SOURCE=recruitment.agents.campaign_planner

# ============================================================================
# OPTIONAL - Agent Configuration (have defaults)
# ============================================================================
# Maximum providers to select per market
CAMPAIGN_PLANNER_MAX_PROVIDERS_PER_MARKET=10
# Minimum providers to select per market
CAMPAIGN_PLANNER_MIN_PROVIDERS_PER_MARKET=1
# Max events per EventBridge batch (AWS limit: 10)
CAMPAIGN_PLANNER_EVENT_BATCH_SIZE=10
# Max items per DynamoDB batch write (AWS limit: 25)
CAMPAIGN_PLANNER_DYNAMO_BATCH_SIZE=25

# ============================================================================
# OPTIONAL - SES (for provider email in records)
# ============================================================================
RECRUITMENT_SES_DOMAIN=recruitment.example.com
RECRUITMENT_SES_FROM_ADDRESS=recruitment@recruitment.example.com
RECRUITMENT_SES_FROM_NAME=Recruitment Team

# ============================================================================
# OPTIONAL - Logging
# ============================================================================
RECRUITMENT_LOG_LEVEL=INFO

