# Screening Agent - Environment Variables
# Required variables for AWS Lambda deployment

# ============================================================================
# REQUIRED - AWS Configuration
# ============================================================================
AWS_REGION=us-west-2

# ============================================================================
# REQUIRED - DynamoDB (Provider State Storage)
# ============================================================================
RECRUITMENT_DYNAMODB_TABLE_NAME=RecruitmentSessions-poc
RECRUITMENT_DYNAMODB_GSI1_NAME=GSI1

# ============================================================================
# REQUIRED - EventBridge (Event Communication)
# ============================================================================
RECRUITMENT_EVENTBRIDGE_BUS_NAME=recruitment-events-poc
RECRUITMENT_EVENTBRIDGE_SOURCE=recruitment.agents.screening

# ============================================================================
# REQUIRED - S3 (Document Storage)
# ============================================================================
RECRUITMENT_S3_BUCKET_NAME=recruitment-documents-poc-ACCOUNT_ID
RECRUITMENT_S3_DOCUMENTS_PREFIX=documents/
RECRUITMENT_S3_ATTACHMENTS_PREFIX=attachments/

# ============================================================================
# OPTIONAL - Textract Configuration (Document OCR)
# ============================================================================
# Textract features to use for document analysis
SCREENING_TEXTRACT_FEATURES=FORMS,TABLES
# Minimum confidence for OCR field extraction
SCREENING_TEXTRACT_CONFIDENCE_THRESHOLD=0.8
# SNS topic ARN for Textract async completion notifications
SCREENING_TEXTRACT_SNS_TOPIC_ARN=arn:aws:sns:us-west-2:ACCOUNT_ID:textract-completion-poc
# IAM role ARN for Textract to publish to SNS
SCREENING_TEXTRACT_ROLE_ARN=arn:aws:iam::ACCOUNT_ID:role/TextractSNSRole

# ============================================================================
# OPTIONAL - LLM Configuration (Response Classification & Analysis)
# ============================================================================
# Enable LLM for screening (default: false, uses keyword matching)
LLM_ENABLED=false
# Bedrock model for classification
LLM_BEDROCK_MODEL_ID=anthropic.claude-3-sonnet-20240229-v1:0
# Max tokens for LLM response
LLM_BEDROCK_MAX_TOKENS=500
# Temperature for LLM sampling
LLM_BEDROCK_TEMPERATURE=0.3
# Enable specific LLM features (comma-separated: communication,screening)
LLM_ENABLED_FEATURES=screening

# ============================================================================
# OPTIONAL - Screening Agent Configuration
# ============================================================================
# Minimum insurance coverage required in dollars
SCREENING_INSURANCE_MIN_COVERAGE_DOLLARS=2000000
# Days before expiry to consider insurance as expiring soon
SCREENING_INSURANCE_EXPIRY_BUFFER_DAYS=30
# Minimum confidence for equipment keyword match
SCREENING_EQUIPMENT_MATCH_THRESHOLD=0.8
# Maximum follow-up attempts before escalation
SCREENING_MAX_FOLLOW_UPS=3
# Maximum clarification attempts before decline
SCREENING_MAX_CLARIFICATIONS=2

# ============================================================================
# OPTIONAL - SES (for provider email context)
# ============================================================================
RECRUITMENT_SES_DOMAIN=recruitment.example.com
RECRUITMENT_SES_FROM_ADDRESS=recruitment@recruitment.example.com
RECRUITMENT_SES_FROM_NAME=Recruitment Team

# ============================================================================
# OPTIONAL - Logging
# ============================================================================
RECRUITMENT_LOG_LEVEL=INFO

