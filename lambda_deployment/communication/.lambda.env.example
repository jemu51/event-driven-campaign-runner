# Communication Agent - Environment Variables
# Required variables for AWS Lambda deployment

# ============================================================================
# REQUIRED - AWS Configuration
# ============================================================================
AWS_REGION=us-west-2

# ============================================================================
# REQUIRED - DynamoDB (Provider State Storage)
# ============================================================================
RECRUITMENT_DYNAMODB_TABLE_NAME=RecruitmentSessions-poc
RECRUITMENT_DYNAMODB_GSI1_NAME=GSI1

# ============================================================================
# REQUIRED - EventBridge (Event Communication)
# ============================================================================
RECRUITMENT_EVENTBRIDGE_BUS_NAME=recruitment-events-poc
RECRUITMENT_EVENTBRIDGE_SOURCE=recruitment.agents.communication

# ============================================================================
# REQUIRED - SES (Email Sending)
# ============================================================================
RECRUITMENT_SES_DOMAIN=recruitment.example.com
RECRUITMENT_SES_FROM_ADDRESS=recruitment@recruitment.example.com
RECRUITMENT_SES_FROM_NAME=Recruitment Team
# Optional: SES configuration set for tracking
RECRUITMENT_SES_CONFIGURATION_SET=

# ============================================================================
# REQUIRED - S3 (Email Thread Storage)
# ============================================================================
RECRUITMENT_S3_BUCKET_NAME=recruitment-documents-poc-ACCOUNT_ID
RECRUITMENT_S3_DOCUMENTS_PREFIX=documents/
RECRUITMENT_S3_ATTACHMENTS_PREFIX=attachments/

# ============================================================================
# OPTIONAL - LLM Configuration (Email Personalization)
# ============================================================================
# Enable LLM for email drafting (default: false, uses templates)
LLM_ENABLED=false
# Bedrock model for email generation
LLM_BEDROCK_MODEL_ID=anthropic.claude-3-sonnet-20240229-v1:0
# Max tokens for LLM response
LLM_BEDROCK_MAX_TOKENS=500
# Temperature for LLM sampling (0.0 = deterministic, 1.0 = creative)
LLM_BEDROCK_TEMPERATURE=0.7
# Enable specific LLM features (comma-separated: communication,screening)
LLM_ENABLED_FEATURES=communication

# ============================================================================
# OPTIONAL - Communication Agent Configuration
# ============================================================================
# Template directory (relative to agent package)
COMMUNICATION_TEMPLATE_DIRECTORY=agents/communication/templates
# Template format: jinja2 or fstring
COMMUNICATION_TEMPLATE_FORMAT=jinja2
# Use LLM to personalize emails beyond templates
COMMUNICATION_USE_LLM_DRAFTING=false
# Max emails per second (SES rate limit)
COMMUNICATION_MAX_EMAILS_PER_SECOND=14
# Max retries for email sending
COMMUNICATION_MAX_RETRIES=3
# Delay between retries (seconds)
COMMUNICATION_RETRY_DELAY_SECONDS=1.0

# ============================================================================
# OPTIONAL - Logging
# ============================================================================
RECRUITMENT_LOG_LEVEL=INFO

