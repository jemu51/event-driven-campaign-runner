    }
  },

  "certifications": {
    "description": "Valid certification types for screening",
    "types": {
      "comptia_network_plus": {
        "id": "comptia_network_plus",
        "displayName": "CompTIA Network+",
        "description": "CompTIA networking fundamentals certification",
        "keywords": [
          "comptia network+",
          "comptia network plus",
          "network+",
          "n10"
        ],
        "issuer": "CompTIA",
        "expires": true
      },
      "bicsi": {
        "id": "bicsi",
        "displayName": "BICSI Certification",
        "description": "Building Industry Consulting Service International",
        "keywords": [
          "bicsi",
          "rcdd",
          "tech",
          "installer",
          "bicsi installer"
        ],
        "issuer": "BICSI",
        "expires": true
      },
      "fcc_license": {
        "id": "fcc_license",
        "displayName": "FCC License",
        "description": "Federal Communications Commission operator license",
        "keywords": [
          "fcc",
          "fcc license",
          "grol",
          "general radiotelephone",
          "radio operator"
        ],
        "issuer": "FCC",
        "expires": true
      },
      "osha_10": {
        "id": "osha_10",
        "displayName": "OSHA 10",
        "description": "OSHA 10-hour safety training certification",
        "keywords": [
          "osha 10",
