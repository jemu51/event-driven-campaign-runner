  },

  "insurance": {
    "description": "Insurance requirements and validation rules",
    "requirements": {
      "general_liability": {
        "id": "general_liability",
        "displayName": "General Liability Insurance",
        "minimumCoverage": 2000000,
        "currencyUnit": "USD",
        "documentType": "insurance_certificate",
        "validationRules": {
          "coverage_amount": {
            "operator": ">=",
            "value": 2000000,
            "errorMessage": "Coverage amount must be at least $2,000,000"
          },
          "expiry_date": {
            "operator": "date_after_today",
            "bufferDays": 30,
            "errorMessage": "Insurance must be valid for at least 30 more days"
          }
        }
      }
    },
    "defaults": {
      "minimumCoverage": 2000000,
      "requiredForQualification": true
    }
  },

  "travel": {
    "description": "Travel willingness detection",
    "keywords": {
      "positive": [
        "can travel",
        "willing to travel",
        "will travel",
        "travel is ok",
        "travel is fine",
        "no problem with travel",
        "available to travel",
        "can relocate",
        "mobile",
        "flexible location"
      ],
      "negative": [
        "cannot travel",
        "can't travel",
        "not willing to travel",
        "no travel",
        "local only",
        "not mobile",
        "cannot relocate"
      ]
    }
  },

  "markets": {
    "description": "Valid geographic markets for demo scenario",
    "types": {
      "atlanta": {
        "id": "atlanta",
        "displayName": "Atlanta",
        "region": "southeast",
        "state": "GA"
      },
      "chicago": {
        "id": "chicago",
        "displayName": "Chicago",
        "region": "midwest",
        "state": "IL"
      },
      "milwaukee": {
        "id": "milwaukee",
        "displayName": "Milwaukee",
        "region": "midwest",
        "state": "WI"
      }
    }
  },

  "campaignTypes": {
    "satellite_upgrade": {
      "id": "satellite_upgrade",
      "displayName": "Satellite Upgrade",
      "description": "Satellite dish installation and upgrade campaign",
      "defaultRequirements": {
        "equipment": {
          "required": ["bucket_truck", "spectrum_analyzer"],
          "optional": ["fiber_splicer"]
        },
        "documents": {
          "required": ["insurance_certificate"]
        },
        "certifications": {
          "preferred": ["comptia_network_plus", "bicsi", "fcc_license"]
        },
        "insurance_min_coverage": 2000000,
        "travel_required": true,
        "providers_per_market": 5
      }
    }
  },

  "screeningLogic": {
    "description": "Decision rules for provider screening",
    "qualificationCriteria": {
      "QUALIFIED": {
        "requirements": [
          "All required equipment confirmed",
          "Valid insurance certificate uploaded",
          "Insurance coverage >= minimum",
          "Insurance not expired",
          "Travel confirmed if required"
        ]
      },
      "WAITING_DOCUMENT": {
        "trigger": [
          "Equipment confirmed but missing required documents"
        ]
      },
      "REJECTED": {
        "trigger": [
          "Missing required equipment with no indication of acquiring",
          "Expired insurance with no updated document",
          "Coverage below minimum with no indication of upgrading",
          "Explicitly declined opportunity"
        ]
      },
      "UNDER_REVIEW": {
        "trigger": [
          "Ambiguous response requiring human review",
          "Partial equipment match needing clarification",
          "Document extraction confidence below threshold"
        ]
      }
    }
  },

  "notes": [
    "Keywords are case-insensitive for matching",
    "Insurance minimum is in USD whole dollars",
    "Demo scenario uses satellite_upgrade campaign type",
    "Equipment/certification keywords should be expanded based on real responses"
  ]
}
